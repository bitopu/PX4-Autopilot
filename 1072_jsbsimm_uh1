
#!/bin/sh
#
# @name Helicopter SITL
#

# Source the heli (helicopter) default configuration script.
# This loads default parameter values and configurations specific to helicopter aircraft
# that are commonly used across different helicopter airframes in the PX4 ecosystem.
# The ${R} variable represents the root directory path for the ROMFS filesystem.
. ${R}etc/init.d/rc.heli_defaults

param set-default CA_AIRFRAME 11

param set-default FW_LND_ANG 5
param set-default FW_LND_FL_PMIN 9.5
param set-default FW_LND_FL_PMAX 20
param set-default FW_LND_FLALT 5

param set-default NPFG_PERIOD 25

param set-default FW_PR_FF 0.40
param set-default FW_PR_I 0.05
param set-default FW_PR_P 0.05

param set-default FW_R_TC 0.45
param set-default FW_RR_FF 0.40
param set-default FW_RR_I 0.132
param set-default FW_RR_P 0.085

param set-default FW_W_EN 1

param set-default MIS_TAKEOFF_ALT 20

param set-default NAV_ACC_RAD 15
param set-default NAV_DLL_ACT 2

param set-default RWTO_TKOFF 0
param set-default RWTO_PSP 8

param set-default CA_ROTOR_COUNT 1
param set-default CA_ROTOR0_PX 0.3


param set-default PWM_MAIN_FUNC3 101
param set-default PWM_MAIN_FUNC4 201
param set-default PWM_MAIN_FUNC5 202
param set-default PWM_MAIN_FUNC6 203
param set-default PWM_MAIN_FUNC7 204

